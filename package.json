{
  "homepage": "https://nirmalkumar.github.io/portfolio",
  "name": "Nirmal-Kumar-Portfolio-Project",
  "version": "2.0.0",
  "author": "Nirmal Kumar",
  "private": true,
  "scripts": {
    "css": "postcss assets/styles/main.css -o assets/styles/main.min.css --verbose",
    "server-reload": "browser-sync start --config ./browser-sync-config.js",
    "develop": "concurrently 'npm:css -- --watch' 'npm:server-reload'",
    "build": "npm run css -- --env 'production'",
    "format": "npx prettier ./**/*.html",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%"
  ],
  "dependencies": {
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.2",
    "browser-sync": "^2.27.7",
    "concurrently": "^7.0.0",
    "cssnano": "^5.0.17",
    "postcss-cli": "^9.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "gh-pages": "^6.2.0",
    "postcss": "^8.4.7",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "tailwindcss": "^3.0.23"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
